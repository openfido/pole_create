{
  "description" : "Pole creation tool for GridLAB-D",
  "docker" : "slacgismo/gridlabd:latest",
  "git" : "https://github.com/openfido/pole_create.git",
  "branch" : "main",
  "script" : "openfido.sh",
  "manual" : {
    "config" : "csv"
  },
  "config" : {
    "INPUTGLM" : {
      "prompt" : "Input model (GLM)",
      "description" : "GridLAB-D model GLM file",
      "input_type" : "upload required",
      "default" : ""
    },
    "SPACING" : {
      "prompt" : "Pole spacing (ft)",
      "description" : "Distance between poles (ft)",
      "input_type" : "str",
      "default" : "100"
    },
    "POLETYPE" : {
      "prompt" : "Pole type",
      "description" : "Type of pole structure",
      "input_type" : "str",
      "default" : "WOOD-EC-45/4"
    },
    "POLEDATACSV" : {
      "prompt" : "Pole data (CSV)",
      "description" : "Type of pole structure",
      "input_type" : "upload",
      "default" : ""
    },
    "WEATHERNAME" : {
      "prompt" : "Weather name",
      "description" : "Name for weather data",
      "input_type" : "str",
      "default" : "forecast"
    },
    "OUTPUTGLM" : {
      "prompt" : "Output (GLM)",
      "description" : "Output filename (GLM)",
      "input_type" : "str",
      "default" : "poles.glm"
    },
    "OPTIONS" : {
      "description" : "Additional options",
      "prompt" : "Options",
      "input_type" : "str",
      "default" : "--ignore_location --include_network"
    }
  }
}
